<center>
<h1>Listing shows</h1>

<table>
  <tr>
    <th>Show time</th>
    <th>Show date</th>
    <th>Show type</th>
    <th>Theater</th>
    <th>Cinema</th>

  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%= show.show_time %></td>
    <td><%= show.show_date %></td>
    <td><%= show.show_type %></td>
    <td><%= show.theater_id %></td>
    <td><%= show.cinema_id %></td>

<% if can? :manage, @show %>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
  </tr>
<br />
<% end %>
</table>


<% if can? :manage, @show %>
<%= link_to 'New Show', new_show_path, :class => 'button' %>
<% end %>

</center>
